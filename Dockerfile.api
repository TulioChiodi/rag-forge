FROM python:3.12-slim
WORKDIR /app

RUN apt-get update \
 && apt-get install -y --no-install-recommends \
      tesseract-ocr \
      ghostscript \
      poppler-utils \
      qpdf \
      ca-certificates \
      curl \
      iputils-ping \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY src ./src
EXPOSE 8000
CMD ["python", "-m", "src.main"]